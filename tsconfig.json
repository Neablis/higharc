{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es5", "es6", "dom"],
    "allowJs": true,
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "types": ["jest"],
    "baseUrl": "./src",
    "paths": {
      "utils/*": ["utils/*"],
      "entity/*": ["entity/*"],
      "models/*": ["models/*"]
    },
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
  },
  "include": [
    "src/*"
  ]
}